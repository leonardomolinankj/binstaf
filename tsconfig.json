{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "public/build",
    "rootDir": "src/electron",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"]
  },
  "exclude": ["node_modules", "public", "out/**", "src/frontend/**"],
  "include": ["src/electron/**/*"]
}
